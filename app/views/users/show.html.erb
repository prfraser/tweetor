<h2>First Name: <%= @user.first_name %> </h2>
<h2>Last Name: <%= @user.last_name %> </h2>
<h2>Email: <%= @user.email %> </h2>

<h3>Tweets:</h3>
<% @tweets.each do |tweet| %>
  <ul>
    <li><%= tweet.content %></li>
  </ul>
<% end %>

<% if @user == current_user %>
	<h2>Following: </h2>
	<% @following.each do |follow| %>
	<ul>
		<li>
			<%= follow.slug %>
		</li>
	</ul>
	<% end %>
	<h2>Followers: </h2>
	<% @followers.each do |follow| %>
	<ul>
		<li>
			<%= follow.slug %>
		</li>
	</ul>
	<% end %>
<% end %>

<%= render 'follows/form' %>

<%= link_to 'Back', tweets_path %>
